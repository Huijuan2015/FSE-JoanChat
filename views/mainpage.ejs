<!DOCTYPE html>
<html lang="en">
<head>
    <title>SSNoC</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/client.js"></script>
    <script src="/js/welcomepage.js"></script>
    <!--<script src="/js/directory.js"></script>-->
    <script src="/js/mainpage.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/contactlist.js"></script>
    <script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>
    <link rel="stylesheet" href="/css/chatroom.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css">

    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <style>
        html, body {
            height: 100%;
        }

        .wrap {
            margin-top: 80px;
            margin-bottom: 10px;
            height: 300px;
            overflow-y: auto;
            background-color: #f5f5f5;

        }

        .push, .footer {
            height: 40px;
        }

        .footer {

        }

        .label {
            display: inline;
            overflow-y: auto;
            padding: .2em .6em .3em;
            font-size: 75%;
            font-weight: bold;
            line-height: 1;
            color: #fff;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: .25em;
            background-color: #5bc0de;
            border-color: #46b8da;
        }

    </style>
</head>
<script>
    $('document').ready(function () {
        document.getElementById("welcome").style.display = "inline";
        document.getElementById("All").style.display = "none";
        document.getElementById("direct").style.display = "none";
        document.getElementById("annonce").style.display = "none";
        document.getElementById("searchResult").style.display = "none";


    });
</script>
<body>

<%- include partials/navbar_partial %>

<p id="lastLogout" style="display: none" value=<%= lastLogOut %>></p>

<div id="welcome">
    <div class="container" style="margin-top: 40px">
        <div class="jumbotron well">
            <h4>Welcome <span><%= username %>!</span></h4>
            <div class="well" id="statusmsg" style="display:none;">
            </div>
            <h4>Select your current status:</h4>

            <div class="list-group">
                <div class="status">
                    <a href="#" class="list-group-item" id="OK"><span class="xicon glyphicon glyphicon-ok-sign"
                                                                      style="color:green;"></span>I am OK, I do not need
                        help</a>
                </div>
                <div class="status">
                    <a href="#" class="list-group-item" id="HELP"><span
                                class="xicon glyphicon glyphicon-exclamation-sign" style="color:#FFD700;"></span>I need
                        help but it is not life threatening</a>
                </div>
                <div class="status">
                    <a href="#" class="list-group-item" id="SOS"><span class="xicon glyphicon glyphicon-plus-sign"
                                                                       style="color:red;"></span>Help me this is an
                        emergency!</a>
                </div>
            </div>
        </div>
    </div>
               
    </div>

<div id="All">
    <div class="container">
        <div class="wrap well"> <!--style="overflow:scroll"固定长宽-->
            <ul class="nav nav-tabs nav-justified" id="talkingToAll"
                style="color: #fff; text-align: center; font-size: 75%; font-weight: bold; background-color:#5bc0de "><%= receiver %></ul>
            <div id="messagesAll">
            </div>
            <div class="push">
            </div>
        </div>
    

<div class="footer">
                    <div class="input-group">
                        <input id="msgboxAll" type="text" class="form-control input-sm chat_input" name="msgbox" placeholder="Write your message here..." />
                        <span class="input-group-btn">
                        <button class="btn btn-primary btn-sm" id="btn-chat" style = "background-color:#5bc0de;" >Send</button>
                        </span>
                    </div>
                </div>
  </div>
</div>

<div id="direct">
    <div class="container" style="margin-top: 60px">
        <div class="row">
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading c-list">
                    <span class="title">Directory</span>
                    <ul class="pull-right c-controls">
                    </ul>
                </div>
                </div>

                <div class="list-group">
            <% userList.sort %>
            <% for(var i = 0; i < userList.length; i++) { %>
            <div class="list-group-item">
            <!-- 头像<div class="col-xs-12 col-sm-3">
                            <img src="http://api.randomuser.me/portraits/men/49.jpg" alt="Scott Stevens" class="img-responsive img-circle" />
                        </div>-->
                    <div class="panel-heading">
                        <a href="#">
                            <% if (userList[i].isOnline === 1) { %>
                            <span class="glyphicon glyphicon-plus-sign" style="color:green;"></span>
                            <% } else { %>
                            <span class="glyphicon glyphicon-minus-sign" style="color:red;"></span>
                            <% } %>
                            <%= userList[i].username %><span class="glyphicon glyphicon-map-marker text-muted c-info" data-toggle="tooltip" title="5842 Hillcrest Rd"></span><span id=<%= userList[i].username %>alert
                                                             class="badge badge-warning" style="display:none">New</span>
                        </a>

                    </div>
                    <div class="panel-body" id=<%= userList[i].username %>Sta>
                        <div class="row">
                            <div>
                                <% if(userList[i].status == "OK") { %>
                                <span><small>Status:
                                        <div class="xicon glyphicon glyphicon-ok-sign" style="color:green;"></div>
                                        <span id=<%= userList[i].username %>Status>I am OK, I do not need help.</span>
                                    </small></span>
                                <% } %>
                                <% if(userList[i].status == "HELP") { %>
                                <span><small>Status:
                                        <div class="xicon glyphicon glyphicon-exclamation-sign"
                                             style="color:#FFD700;"></div>
                                        <span id=<%= userList[i].username %>Status>I need help but it is not life threatening.</span>
                                    </small></span>
                                <% } %>
                                <% if(userList[i].status == "SOS") { %>
                                <span><small>Status:
                                        <div class="xicon glyphicon glyphicon-plus-sign" style="color:red;"></div>
                                        <span id=<%= userList[i].username %>Status>Help me this is an emergency!</span>
                                    </small></span>
                                <% } %>
                                <% if(userList[i].status == "ND") { %>
                                <span><small>Status:
                                        <div style="color:gray;"></div>
                                        <span id=<%= userList[i].username %>Status>The user has not provided their status yet.</span>
                                    </small></span>
                                <% } %>
                            </div>

                        </div>
                </div>
            </div>
            <% } %>
        </div>          
    </div>
</div>
    </div>
</div>





<div id="annonce">
    <div class="container">
        <div class="wrap well">
            <div id="messages">
            </div>
            <div class="push">
            </div>
        </div>
    

    <div class="footer">
                    <div class="input-group">
                        <input id="msgboxAll" type="text" class="form-control input-sm chat_input" name="msgbox" placeholder="Write your message here..." />
                        <span class="input-group-btn">
                        <button class="btn btn-primary btn-sm" id="btn-chat" style = "background-color:#5bc0de;" >Send</button>
                        </span>
                    </div>
                </div>
  </div>
  </div>

<div id="searchResult">
    <div class="container" style="margin-top: 60px">
       <div class="col-sm-offset-5">
            <h4>Citizen List</h4>
        </div>
        <div class="panel group" id="userList"></div>
        <div class="col-sm-offset-5">
            <h4>Citizen In This Status</h4>
        </div>
        <div class="panel group" id="statusList"></div>
        <div class="col-sm-offset-5">
            <h4>Public Message List</h4>
        </div>
        <div class="panel group" id="publicMsgList"></div>
        <div class="col-sm-offset-5">
            <h4>Private Message List</h4>
        </div>
        <div class="panel group" id="privateMsgList"></div>

    </div>
</div>
</body>
</html>